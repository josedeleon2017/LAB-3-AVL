

@model PagedList.IPagedList<LAB_2___ABB.Models.DrugModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "TreeStatus";
}


<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TreeStatus</title>
</head>
<body>
    <div>
        <h2>TreeStatus</h2>
    </div>

    <table>
        <tr>
            <th>
                @using (Html.BeginForm("Pre", "Drug"))
                {
                    <input id="PreO" type="submit" value="Pre Order" class="btn btn-default" />

                }
            </th>

            <th>
                @using (Html.BeginForm("Post", "Drug"))
                {
                    <input id="PostO" type="submit" value="Post Order" class="btn btn-default" />

                }
            </th>

            <th>
                @using (Html.BeginForm("In", "Drug"))
                {
                    <input id="InO" type="submit" value="In Order" class="btn btn-default" />

                }
            </th>

        </tr>
    </table>
    <br />

    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }

    </table>

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("TreeStatus", new { page }))


</body>
</html>
